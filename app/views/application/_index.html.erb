<%= render partial: 'shared/alert' unless flash[:alert].nil? %>
<% if current_user.nil? %>
    <h2>Login</h2>
    <h4 type="button" data-toggle="popover" title="Title" data-content="Content goes here">Please enter your TVDB account ID</h4>
    <div class="input-group login-form">
      <input type="text" class="form-control"/>
      <span class="input-group-btn">
        <button class="btn btn-default" type="submit" id="login">Login</button>
      </span>
    </div>
<% else %>
    <h2>Statistics</h2>
    <p>You currently have <strong><%= current_user.series.count %></strong>
      favorite series with
      <strong><%= current_user.episodes.upcoming.count %></strong>
      upcoming episodes.</p>
    <p>Your series list was last updated <strong><%= last_scanned_in_words %></strong>, but you can <%= link_to('refresh it', refresh_path, remote: true) %> now.</p>
    <h2>iCalendar</h2>
    <p>Your personalized <%= link_to 'iCal feed', ical_path(uid: current_user.uuid) %>
        can be added to Google Calendar as a subscribed calendar, or you
        can download and import it into the calendar app of your choice.</p>
    <p>
      Show me episodes from <select class="setting" id="ical_start_offset"><%= ical_start_offset %></select>
      until <select class="setting" id="ical_end_offset"><%= ical_end_offset %></select>
    </p>
    <p>
      I want the timezone set to <select class="setting" id="ical_timezone"><%= ical_timezone %></select>
    </p>
    <!--<p>-->
      <!--I <select class="setting" id="ical_adjust_airtime"><%= ical_adjust_airtime %></select> want to adjust the event times based on my chosen timezone.-->
    <!--</p>-->
<% end %>